@page
@model Projekt2Slownik.Pages.Slownik.EditModel
@{
}
<h2 class="text-info">Edytuj książkę</h2>
<br />

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Words.Id" />
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Words.Pl">Polskie:</label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Words.Pl" class="form-control" />
                    </div>
                    <span asp-validation-for="Words.Pl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Words.No">Norweskie:</label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Words.No" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Edytuj" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-success form-control">Wróć do listy</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}